<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<LinearLayout 	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:tag="{Value:Item}" >

	<!-- SizeId -->

	<LinearLayout 
		style="@style/content_panel"  >
		<TextView 
			style="@style/content_label" 
			android:text="@string/lb_sizename" />

		<TextView 
			android:id="@+id/sizeid"
			android:tag="{Value:SizeName}"
			style="@style/content_text"
/>

	</LinearLayout>

	<!-- DishId -->

	<LinearLayout 
		android:layout_marginTop="@dimen/content_margin_top"
		style="@style/content_panel"  >
		<TextView 
			style="@style/content_label" 
			android:text="@string/lb_dishname" />

		<TextView 
			android:id="@+id/dishid"
			android:tag="{Value:DishName}"
			style="@style/content_text"
/>

	</LinearLayout>

	<!-- ExtraPrice -->

	<LinearLayout 
		android:layout_marginTop="@dimen/content_margin_top"
		style="@style/content_panel"  >
		<TextView 
			style="@style/content_label" 
			android:text="@string/lb_extraprice" />

		<TextView 
			android:id="@+id/extraprice"
			android:tag="{Value:ExtraPrice}" 
			style="@style/content_text" 
/>

	</LinearLayout>

	<!-- AvailableCount -->

	<LinearLayout 
		android:layout_marginTop="@dimen/content_margin_top"
		style="@style/content_panel"  >
		<TextView 
			style="@style/content_label" 
			android:text="@string/lb_availablecount" />

		<TextView 
			android:id="@+id/availablecount"
			android:tag="{Value:AvailableCount}" 
			style="@style/content_text" 
/>

	</LinearLayout>

	<!-- UpdateDate -->

	<LinearLayout 
		android:layout_marginTop="@dimen/content_margin_top"
		style="@style/content_panel"  >
		<TextView 
			style="@style/content_label" 
			android:text="@string/lb_updatedate" />

		<TextView 
			android:id="@+id/updatedate"
			android:tag="{Value:UpdateDate, Converter:DateConverter}" 
			style="@style/content_text" 
/>

	</LinearLayout>

	<!-- UpdateUserId -->

	<LinearLayout 
		android:layout_marginTop="@dimen/content_margin_top"
		style="@style/content_panel"  >
		<TextView 
			style="@style/content_label" 
			android:text="@string/lb_updateusername" />

		<TextView 
			android:id="@+id/updateuserid"
			android:tag="{Value:UpdateUserName}"
			style="@style/content_text" />

	</LinearLayout>
</LinearLayout>
</ScrollView>
