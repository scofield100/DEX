<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <!--Action Bar -->
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/myActionBarTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/myActionBarTabTextStyle</item>
        <item name="android:actionBarTabBarStyle">@style/myActionBarTabBarStyle</item>
    </style>
    
    <style name="myActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">#920905</item>
        <item name="android:backgroundStacked">@color/ActionBarTabColor</item>
        <item name="android:titleTextStyle">@style/myTitleActionBarStyle</item>
        <item name="android:subtitleTextStyle">@style/mySubTitleActionBarStyle</item>
    </style>
    
    <style name="myTitleActionBarStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mySubTitleActionBarStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="myActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/style_ab_tab_indicator_ab</item>
    </style>

    <style name="myActionBarTabTextStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="myActionBarTabBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">

    </style>

    
	<style name="content_panel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
  
   <style name="content_edit_panel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    
     <style name="content_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
       <item name="android:textColor">#515151</item>
        <item name="android:textStyle">bold</item>
    </style>
    	
     <style name="content_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/content_margin_left</item>
    </style>
  
   <style name="content_nav" parent="@style/content_text">
         <item name="android:drawableRight">@drawable/drawable_nav</item>
         <item name="android:gravity">center_vertical</item>
     </style>

    <style name="content_text_edit">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
    </style>

     <style name="content_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
     </style>
     
     <style name="content_date" parent="@android:attr/buttonBarButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
     </style>
     
     <style name="content_time" parent="@style/content_date">
        
     </style>
     
     <style name="content_numeric" parent="@style/content_text">
         
     </style>
     
     <style name="content_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">fill_horizontal</item>        
     </style>
     
     <style name="filterable_spinner" parent="@android:style/Widget.DeviceDefault.Light.Spinner" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
     </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff29549f</item>
        <item name="android:background">@null</item>
    </style>
</resources>
